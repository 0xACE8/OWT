# Modify default IP
#sed -i 's/192.168.1.1/192.168.177.90/g' package/base-files/files/bin/config_generate

# Password updata
sed -i 's/root:$1$V4UetPzk$CYXluq4wUazHjmCDBCqXF.:0:0:99999:7:::/root:${{ secrets.ROOT_PASSWORD }}:19007:0:99999:7:::/g' package/lean/default-settings/files/zzz-default-settings
sed -i 's/ash/bash/g' package/base-files/files/etc/passwd

# Ssh authorized key
mkdir -p package/base-files/files/etc/dropbear
echo "${{ secrets.SSH_PUBLICKEY }}" > package/base-files/files/etc/dropbear/authorized_keys > /dev/null

# Modify Hostname
